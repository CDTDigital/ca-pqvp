{
    "id": "http://kpmg/webstart/User",
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": ["userId", "firstName", "lastName", "userName"],
    "additionalProperties": false,
    "properties": {
        "userId": {
            "description": "The identifier of the object",
            "type": "string"
        },
        "firstName": {
            "description": "The users first name",
            "type": "string"
        },
        "lastName": {
            "description": "The users last name",
            "type": "string"
        },
        "userName": {
            "description": "The users login user name",
            "type": "string",
            "minLength": 8
        },
        "email": {
            "description": "The users email address",
            "type": "string",
            "format": "email"
        },
        "homepage": {
            "description": "The users web page",
            "type": "string",
            "format": "uri"
        },
        "role": {
            "description": "The associated user role.  0 = Standard user, 1 = Account admin, 2 = System admin",
            "enum": [0,1,2],
            "type": "integer"
        }
    }
}
