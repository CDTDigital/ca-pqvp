{
    "id": "http://kpmg/webstart/User",
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "required": ["userId", "firstName", "lastName", "userName"],
    "additionalProperties": false,
    "properties": {
        "userId": {
            "description": "The identifier of the object",
            "type": "string",
            "x-kpmg-dotnet-attributes": [
                "//[CustomAttribute]",
                "//[CustomAttribute2(param=\"value\")]"
            ]
        },
        "firstName": {
            "description": "The users first name",
            "type": "string"
        },
        "lastName": {
            "description": "The users last name",
            "type": "string"
        },
        "userName": {
            "description": "The users login user name",
            "type": "string",
            "minLength": 8
        },
        "email": {
            "description": "The users email address",
            "type": "string",
            "format": "email"
        },
        "homepage": {
            "description": "The users web page",
            "type": "string",
            "format": "uri"
        },
        "role": {
            "description": "The associated user role",
            "enum": [0,1,2],
            "options": [
                {
                    "value": 0,
                    "label": "Standard"
                },
                {
                    "value": 1,
                    "label": "AccountAdmin"
                },
                {
                    "value": 2,
                    "label": "SystemAdmin"
                }
            ],
            "type": "integer",
            "x-kpmg-enumName": "UserRole"
        }
    }
}
